import java.util.Scanner;

public class perfect_number {

	public static void main(String[] args)
	{
		int n;
		Scanner sc=new Scanner(System.in);
		System.out.println("enter ranger");
		n=sc.nextInt();
		for(int k=1;k<=n;k++)
		{
			 int sum=0;
		
		     for(int i=1;i<k;i++)
		    {
			 if(k%i==0)
			  {
				sum+=i;
			  }
			
		   }
		  if(sum==k)
		   
		  {
		
		       System.out.println(k+" number is perfect numbr");
		       
		  }
		/*else
		{
			System.out.println(k+" number is not perfect numbr");
		}*/
	 }
	
	}
 
}
/*
 * enter ranger
500
6 number is perfect numbr
28 number is perfect numbr
496 number is perfect numbr
*/
