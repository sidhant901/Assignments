public class even_no {

	public static void main(String[] args)
	{
	   for(int i=1;i<=50;i++)
	   {
		   if(i%2==0)
		   {
			   System.out.println(i +" "+ "number is even  ");
			   
		   }
		   
		   
			   
		   
	   }
	   
		

	}

}

